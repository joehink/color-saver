<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <% include ../partials/nav.ejs %>
    <div class="container">
      <nav class="top-element projects-nav" id="secondary-nav">
        <a
          class="btn btn-black"
          href="/projects/new"
        >
          <i class="fas fa-plus"></i> Project
        </a>
      </nav>
      <% if (projects.length > 0) { %>
      <div class="flex-grid">
        <% for (let project of projects) { %>
          <div class="item-wrapper">
            <a class="item project-item" href="/projects/<%= project.id %>">
              <div
                class="color-id"
                style="background: <%= project.color %>;"
              ></div>
              <% if (project.title.length > 19) { %>
                <h2><%= project.title.slice(0, 19) + '...' %></h2>
              <% } else { %>
                <h2><%= project.title %></h2>
              <% } %>

              <% if (project.description.length > 75) { %>
                <p><%= project.description.slice(0, 75) + '...' %></p>
              <% } else { %>
                <p><%= project.description %></p>
              <% } %>
            </a>
          </div>
        <% } %>
      </div>
      <% } else { %>
        <div class="no-message">
          <p>No Projects</p>
        </div>
      <% } %>
    </div>
  </body>
</html>
