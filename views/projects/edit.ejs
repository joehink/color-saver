<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <div class="flex-page">
      <% include ../partials/nav.ejs %>
      <div
        class="flex-center-background"
        style="background-image: <%= randomGradient %>;"
      >
        <div class="form-wrapper">
          <a class="back-btn" href="/projects/<%= project.id %>">
            <i class="fas fa-arrow-left"></i> Go Back
          </a>
          <div class="form-container">
            <div class="icon-wrapper">
              <i class="far fa-edit"></i>
            </div>
            <h3>Edit Project</h3>
            <% if (message.length > 0) { %>
              <p class="error-message">
                <%= message %>
              </p>
            <% } %>
            <form action="/projects/<%= project.id %>?_method=PATCH" method="POST">
              <label for="title">Title</label>
              <input
                type="text"
                id="title"
                name="title"
                value="<%= project.title %>"
              />
              <label for="description">Description</label>
              <textarea id="description" name="description">
                <%= project.description %>
              </textarea>
              <input class="btn btn-green submit" type="submit" value="Save" />
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
