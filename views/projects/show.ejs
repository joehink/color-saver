<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Project Page</h1>
    <a href="/projects/<%= project.id %>/colors/new">+ Color</a>
    <a href="/projects/<%= project.id %>/edit">Edit</a>
    <form action="/projects/<%= project.id %>?_method=DELETE" method="POST">
      <input type="submit" value="Delete Project">
    </form>
    <div class="">
      <% for (let color of project.colors) { %>
        <a href="/projects/<%= project.id %>/colors/<%= color.id %>">
          <div>
            <%= color.name %>
          </div>
        </a>
      <% } %>
    </div>
  </body>
</html>
