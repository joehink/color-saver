<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <div class="flex-page">
      <% include ../partials/nav.ejs %>
      <div
        class="flex-center-background"
        style="background: <%= color.value %>;"
      >
        <div class="form-wrapper">
          <a
            class="back-btn"
            href="/projects/<%= projectId %>/colors/<%= color.id %>"
          >
            <i class="fas fa-arrow-left"></i> Go Back
          </a>
          <div class="form-container">
            <div class="color-sample" style="background: <%= color.value %>;"></div>
            <%= message %>
            <form
              action="/projects/<%= projectId %>/colors/<%= color.id %>?_method=PUT"
              method="POST"
            >
              <label for="name">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                placeholder="Name"
                value="<%= color.name %>"
              />

              <label for="value">Value</label>
              <input
                type="text"
                id="value"
                name="value"
                placeholder="Hex or RGB value"
                value="<%= color.value %>"
              />
              <input class="btn btn-green submit" type="submit" value="Save">
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
